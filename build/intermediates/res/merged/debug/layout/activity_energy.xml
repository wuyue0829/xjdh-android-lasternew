<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:duanlian="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f88000"
    android:orientation="vertical" >
    
<com.chinatelecom.xjdh.view.MyViewPagerIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:orientation="horizontal"
        duanlian:visible_tab_count="4">

        <TextView
            android:id="@+id/daiban"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="meiZi"
            android:layout_marginBottom="1dp"
            android:textColor="#8F8F8F"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/xiangqing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="meiZi"
            android:textColor="#8F8F8F"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/jilu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="meiZi"
            android:textColor="#8F8F8F"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/shijian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="meiZi"
            android:textColor="#8F8F8F"
            android:textSize="17sp" />
    </com.chinatelecom.xjdh.view.MyViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_marginTop="2dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1" />
</LinearLayout>
