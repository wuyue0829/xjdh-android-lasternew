<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="innerrect">
        <attr name="inner_width" format="integer"/>
        <attr name="inner_height" format="integer"/>
        <attr name="inner_margintop" format="integer" />
        <attr name="inner_corner_color" format="color" />
        <attr name="inner_corner_length" format="integer" />
        <attr name="inner_corner_width" format="integer" />
        <attr name="inner_scan_bitmap" format="reference" />
        <attr name="inner_scan_speed" format="integer" />
    </declare-styleable>
    
     <declare-styleable name="SignatureView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension" />
        <attr name="penColor" format="color" />
        <attr name="velocityFilterWeight" format="float" />
    </declare-styleable>

    <declare-styleable name="RingsView">
        <!--扩散圆颜色-->
        <attr name="diffuse_color" format="color" />
        <!--中心圆颜色-->
        <attr name="diffuse_coreColor" format="color" />
        <!--中心圆图片-->
        <attr name="diffuse_coreImage" format="reference" />
        <!--中心圆半径-->
        <attr name="diffuse_coreRadius" format="dimension" />

        <!--新增-->

        <!--扩散圆是否为椭圆-->
        <attr name="rings_isOval" format="boolean" />
        <!--扩散椭圆的矩形外接矩形的 高／宽-->
        <attr name="rings_ovalScale" format="float" />
        <!--中心位置是否为椭圆-->
        <attr name="rings_isCenterOval" format="boolean" />
        <!--中心椭圆的外接矩形的宽-->
        <attr name="rings_centerOvalWidth" format="dimension" />
        <!--中心椭圆的外接矩形的高-->
        <attr name="rings_centerOvalHeight" format="dimension" />
        <!--扩散圆的最大个数：扩散范围内可同时出现的最多圆数-->
        <attr name="rings_num" format="integer" />
        <!--是否为圆环-->
        <attr name="rings_isRing" format="boolean" />
        <!--圆环宽度-->
        <attr name="rings_ringWidth" format="dimension" />
        <!--填充圆颜色：建议为屏幕背景色 默认为白色-->
        <attr name="rings_spaceColor" format="color" />

    </declare-styleable>

    <declare-styleable name="waveSideBar">
        <attr name="textColor" format="color|reference"/>
        <attr name="backgroundColor" format="color|reference"/>
        <attr name="chooseTextColor" format="color|reference"/>
        <attr name="textSize" format="dimension"/>
        <attr name="hintTextSize" format="dimension"/>
        <attr name="radius" format="dimension"/>
        <attr name="circleRadius" format="dimension"/>
    </declare-styleable>
</resources>