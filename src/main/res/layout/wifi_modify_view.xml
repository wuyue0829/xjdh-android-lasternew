<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="能耗板"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(请填写正确的信息)"
            android:textSize="14sp"
            />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/plugin_camera_bottom_bar" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:background="#fff">

            
			 <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:text="账号："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/smd_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:inputType="text"
                    android:text="root"
                    android:theme="@style/MyEditText"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（必填）"
                    android:textSize="12sp" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:text="密码："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:inputType="textPassword"
                    android:text="2016jimglobal"
                    android:theme="@style/MyEditText"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（必填）"
                    android:textSize="12sp" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:text="IP："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/board_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:theme="@style/MyEditText"
                    android:inputType="textEmailAddress"
                    android:text="192.168.2.100"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（必填）"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/plugin_camera_bottom_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="板子网口"
            android:textColor="@color/black"
            android:textSize="20sp"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/plugin_camera_bottom_bar" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff" >
			<TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_margin="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="LAN1："
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ping1_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:inputType="textPostalAddress"
                    android:theme="@style/MyEditText"
                    android:text="192.168.2.100" >
                </EditText>

                <Button
                    android:id="@+id/ping1"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_login"
                    android:text="PING"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_margin="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAN2："
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ping2_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:theme="@style/MyEditText"
                    android:layout_marginRight="10dp"
                    android:inputType="textPostalAddress" >
                </EditText>

                <Button
                    android:id="@+id/ping2"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_login"
                    android:text="PING"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp" />
            </TableRow>
                <Button
                android:id="@+id/ping_fh"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn_login"
                android:text="PING：194.0.0.1"
                android:textSize="14sp"
                android:textColor="@color/white" />
            
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/plugin_camera_bottom_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="修改配置"
            android:textColor="@color/black"
            android:textSize="20sp"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/plugin_camera_bottom_bar" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_margin="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="IP："
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/up_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"
                    android:theme="@style/MyEditText"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_margin="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="子网："
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/up_netmask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"
                    android:theme="@style/MyEditText"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_margin="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="网关："
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/up_gateway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"
                    android:theme="@style/MyEditText"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:padding="5dp" >

            <Button
                android:id="@+id/up_loads"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_login"
                android:padding="10dp"
                android:text="下发配置"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/look"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login"
                android:padding="10dp"
                android:text="读取配置"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/plugin_camera_bottom_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="重启"
            android:textColor="@color/black"
            android:textSize="20sp"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/plugin_camera_bottom_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:padding="5dp" >

            <Button
                android:id="@+id/restart"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_login"
                android:padding="10dp"
                android:text="重启能耗板"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/restart_ip"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login"
                android:padding="10dp"
                android:text="重启后查看网口IP"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/plugin_camera_bottom_bar" />
    </LinearLayout>

</ScrollView>