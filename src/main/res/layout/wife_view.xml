<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAN1："
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ping1_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="192.168.2.100"
            android:inputType="textPostalAddress" >
        </EditText>

        <Button
            android:id="@+id/ping1"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_login"
             android:textColor="@color/white"
             android:textSize="12sp"
            android:text="PING测试" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAN2："
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ping2_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPostalAddress" >
        </EditText>

        <Button
            android:id="@+id/ping2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_login"
             android:textColor="@color/white"
             android:textSize="12sp"
            android:text="PING测试" />
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="能耗板IP："
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/board_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="192.168.2.100"
            android:inputType="textEmailAddress" 
            android:textSize="20sp" />

        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="能耗板密码："
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2016jimglobal"
            android:inputType="textPassword" 
            android:textSize="20sp" />

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改IP："
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/up_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改子网掩码："
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/up_netmask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改网关："
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/up_gateway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >
    <Button
        android:id="@+id/up_loads"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_login"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="下发配置" />
    <Button
        android:id="@+id/look"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:background="@drawable/btn_login"
        android:padding="10dp"
         android:textColor="@color/white"
        android:text="读取配置" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >
    <Button
        android:id="@+id/restart"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_login"
        android:padding="10dp"
         android:textColor="@color/white"
        android:text="重启" />
    <Button
        android:id="@+id/restart_ip"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
         android:textColor="@color/white"
        android:background="@drawable/btn_login"
        android:padding="10dp"
        android:text="重启后查看网口IP" />
    </LinearLayout>
</LinearLayout>
</ScrollView>